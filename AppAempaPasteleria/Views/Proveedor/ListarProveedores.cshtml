@model IEnumerable<AppAempaPasteleria.Models.Proveedor>

@{
    ViewData["Title"] = "ListarProveedores";
}
<div class="card">
    <div class="card-header">
        <h3>Lista de Proveedores</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6 col-md-8">
                <a asp-action="GuardarProveedores" asp-controller="Proveedor" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
            </div>
            <div class="col-sm-6 col-md-4 text-right">
                <form asp-action="ListarProveedores" asp-controller="Proveedor" method="post">
                    <div class="row">
                        <div class="col">
                            @Html.TextBox("buscar", "", new { @class = "form-control form-control-sm", placeholder = "Buscar Raz. Social" })
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-outline-warning"><i class="bi bi-search"></i> Buscar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <br />
        @{
            if (ViewBag.CANTIPROVE == 0)
            {
                <div class="text-break fw-bold">
                    <p style="color:red">Ingrese los datos correctos para realizar la consulta o datos no existentes.</p>
                </div>
            }
            else
            {
                <div class="text-break fw-bold">
                    Cantidad de Registros: @ViewBag.CANTIPROVE
                </div>
            }
        }
    </div>
    <table id="tablaProveedores" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.idProv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.razProv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.rucProv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telProv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.correoProv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.direcProv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.idPaisD)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.idProv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.razProv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.rucProv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telProv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.correoProv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.direcProv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idPaisD)
                    </td>
                    <td>
                        <a href="@Url.Action("EditarProveedores", new { id = item.idProv })" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Editar</a> |
                        <a href="@Url.Action("ProveedorEliminar", new { id = item.idProv })" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>