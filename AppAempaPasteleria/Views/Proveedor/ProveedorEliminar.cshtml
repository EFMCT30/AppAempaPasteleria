@model AppAempaPasteleria.Models.Proveedor

@{
    ViewData["Title"] = "ProveedorEliminar";
}

<div class="card">
    <div class="card-header">
        Eliminar Proveedor
    </div>
    <div class="card-body">
        <h3>¿Estás seguro de que quieres eliminar esto?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.idProv)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.idProv)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.razProv)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.razProv)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.rucProv)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.rucProv)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.telProv)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.telProv)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.correoProv)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.correoProv)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.direcProv)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.direcProv)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.idPais)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.idPais)
                </dd>
            </dl>

            <form asp-action="ProveedorEliminar">
                <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
                <a asp-action="ListarProveedores" asp-controller="Proveedor" class="btn btn-outline-warning"><i class="bi bi-arrow-return-left"></i> Volver a la lista</a>
            </form>
        </div>
    </div>
</div>